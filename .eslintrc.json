{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "props": false,
        
        "no-use-before-define": ["error", {
          "functions": false,
          "classes": true,
          "variables": false,
          "allowNamedExports": false
      }]
    }
}
